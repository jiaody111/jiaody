page {
  background-color: #efefef;
}

ec-canvas {
  width: 750rpx;
  height: 600rpx;
}

.container {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.table {
  position: absolute;
  display: table;
  width: 742rpx;
  border-collapse: collapse;
  overflow-x: hidden;
  margin-top: 30rpx;
  margin-left: 4rpx;
}

.table-tr {
  display: table-row;
  width: 740rpx;
  height: 100rpx;
}

.table-th {
  display: table-cell;
  font-weight: bold;
  font-size: 26rpx;
  border: 1px solid black;
  text-align: center;
  vertical-align: middle;
  width: 200rpx;
}

.table-td {
  display: table-cell;
  border: 1px solid black;
  font-size: 26rpx;
  text-align: center;
  vertical-align: middle;
  width: 200rpx;
}

.icon {
  padding-top: 10rpx;
  margin-left: 10rpx;
}

.view_hide {
  display: none;
}

.view_show {
  display: block;
}


