page {
  height: 100%;
  width: 100%;
}

.bc-container{
  width: 100%;
  height: 200rpx;
  background-color: #337ab7;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 2px white solid;
}

.bc-text1{
  color: white;
  font-size: 42rpx;
  font-weight: bold;
}

.bc-text2{
  color: white;
}
.module-list-container {
  margin-top: 25rpx;
}

.header-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 750rpx;
  margin-top: 10rpx;
  margin-bottom: 15rpx;
  margin-left: 10rpx;
}

.header-img {
  height: 40rpx;
  width: 40rpx;
  margin-right: 15rpx;
  margin-left: 30rpx;
  vertical-align: middle;
}

.header-text {
  vertical-align: middle;
  color: #1c2438;
  font-size: 36rpx;
}

.modulesContainer {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.module-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  margin-left: 17rpx;
  margin-bottom: 15rpx;
  flex-wrap: wrap;
  width: 350rpx;
  height: 70rpx;
}

.module-image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
  vertical-align: middle;
}


.module-text {
  vertical-align: middle;
  margin-right: 10rpx;
  color: #495060;
}

.module-container.view-hover {
  background-color: rgb(206, 204, 204);
}