.i-steps-demo {
  margin: 100rpx 20rpx 100rpx 20rpx;
}

.iPage {
  margin-top: 350rpx;
  margin-bottom: 20rpx;
}

.big-title-container {
  display: flex;
  flex-direction: column;
  margin-top: 60rpx;
  margin-left: 15rpx;
}

.big-title {
  color: #337ab7;
  font-size: 44rpx;
  margin-left: 30rpx;
}

.illustration {
  margin: 20rpx 20rpx 20rpx 20rpx;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.712);
}

.input-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
  background-color: #fcfcfc;
  width: 720rpx;
  height: 340rpx;
  margin-top: 20rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  font-size: 44rpx;
  box-sizing: border-box;
  box-shadow: 4px 1px 1px #ccc;
}

.submit-button {
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  float: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
  background: #337ab7;
  color: #fff;
}

.algo-title {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 36rpx;
}

.line {
  width: 720rpx;
  height: 3rpx;
  background: rgba(0, 0, 0, 0.096);
}

.input-item {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  margin-top: 30rpx;
  height: 100rpx;
  width: 720rpx;
}

.param-name {
  font-size: 32rpx;
  width: 300rpx;
}

.input {
  width: 300rpx;
  height: 100rpx;
  border: 1px solid rgba(0, 0, 0, 0.096);
  border-radius: 25rpx;
}

.pageChange {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  width: 750rpx;
  margin-top: 250rpx;
}

.currentPage {
  margin-left: 200rpx;
  margin-right: 200rpx;
  font-size: 40rpx;
}
