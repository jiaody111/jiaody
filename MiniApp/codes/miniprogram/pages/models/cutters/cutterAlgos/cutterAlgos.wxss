@import '/pages/models/modelTemp/modelTemp.wxss';

.input-container {
  height: 850rpx;
}

.chspic {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  margin-bottom: 40rpx;
}

.picker {
  width: 500rpx;
  height: 60rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
  padding-left: 20rpx;
  padding-top: 8rpx;
  font-size: 28rpx;
  background-color: white;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: border-box;
  box-shadow: 4px 1px 1px #ccc;
}

.down-arrow {
  display: inline-block;
  position: absolute;
  left: 470rpx;
  margin-top: -50rpx;
  width: 40rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.down-arrow::after {
  display: inline-block;
  content: " ";
  height: 18rpx;
  width: 18rpx;
  border-width: 0 2rpx 2rpx 0;
  border-color: #999;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform-origin: center;
  position: absolute;
  top: 50%;
  right: 10rpx;
  margin-top: -10rpx;
}

.param-name {
  font-size: 28rpx;
  width: 400rpx;
}

.input {
  font-size: 28rpx;
  width: 300rpx;
}

.submit-button {
  float: right;
  margin-right: 20rpx;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  background: #337ab7;
  border: 0.5rpx solid #337ab7;
  color: #fff;
}

.add-ALG-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.add-ALG-container text {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.addlabel {
  width: 320rpx;
  height: 40rpx;
  font-size: 24rpx;
  background: #d9534f;
  border: 0.5rpx solid #d9534f;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
  margin-bottom: 30rpx;
  margin-right: 20rpx;
  padding-top: 10rpx;
  color: #fff;
}

.algo-added-name {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: 0.5rpx solid #337ab7;
  background: #337ab7;
  border-radius: 10rpx;
  color: #fff;
}

.pageChange {
  margin-top: 100rpx;
}
